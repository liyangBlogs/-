/* common/component/tabbarComponent/tabbar.wxss */
.tabbar_box {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 98rpx;
  background-color: #FFF;
  box-shadow: 0 0 4rpx rgba(0, 0, 0, 0.1);
  -webkit-box-shadow: 0 0 4rpx rgba(0, 0, 0, 0.1);
}

.tabbar_box.iphoneX-height {
  padding-bottom: 66rpx;
}

.tabbar_nav {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
  height: 100%;
  font-size: 20rpx;
  justify-content: center;
  align-items: center;
}

.tabbar_icon {
  width: 56rpx;
  height: 56rpx;
}

.special-wrapper {
  position: absolute;
  left: 32rpx;
  top: -46rpx;
  width: 96rpx;
  height: 96rpx;
  padding: 6rpx;
  text-align: center;
  box-sizing: border-box;
}

.special-wrapper .tabbar_icon {
  width: 84rpx;
  height: 84rpx;
}

